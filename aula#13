Algoritmo "semnome"

Var
v1, v2, s: inteiro

funcao soma(x,y: inteiro) : inteiro
inicio
retorne x + y
fimfuncao

Inicio
escreva("Digite primeiro valor: ")
leia(v1)
escreva("Digite segundo valor: ")
leia(v2)
s <- Soma(v1,v2)
escreva("Soma entre ",v1," e ",v2," é igual a: ",s)

Fimalgoritmo

algoritmo "semnome"
var
   n : inteiro
   r: caractere

funcao ParOuImpar(v: inteiro) : caractere
inicio
   se (v%2 = 0) entao
      retorne "Par"
   senao
      retorne "Ímpar"
   fimse
fimfuncao

inicio
   escreva("Digite um número: ")
   leia(n)
   r <- ParOuImpar(n)
   escreva("O número",n," é ",r,".")
fimalgoritmo

algoritmo "semnome"
var
   n,f : inteiro

funcao fatorial(v: inteiro) : inteiro
var c,r: inteiro

inicio
   r <- 1
   para c <- 1 ate v faca
      r <- r * c
      escreval(c)
   fimpara
   retorne r
fimfuncao

inicio
   escreva("Digite um número: ")
   leia(n)
   f <- fatorial(n)
   escreva("O fatorial de",n,"! é igual a ",f,".")
fimalgoritmo

algoritmo "semnome"
var
n: caractere
c: inteiro
inicio

escreva("Digite nome: ")
leia(n)
escreval("Total de letras no seu nome: ",compr(n))
escreval("Seu nome em maiúscula: ",maiusc(n))
escreval("Seu nome em minúscula: ",minusc(n))
escreval("A primeira letra do neu nome: ",copia(n,1,1))
escreval("A última letra do seu nome: ",copia(maiusc(n),compr(n),1))
escreval("Seu nome tem a letra A na posição: ",pos("A", maiusc(n)))
escreval("O código da letra A é: ",asc(maiusc("a")))
escreval("O letra de código 65 é: ",carac(65))

para c <- compr(n) ate 1 passo -1 faca
   escreva(copia(maiusc(n), c,1))
fimpara
fimalgoritmo
