algoritmo "semnome"
var
   ano,nasc,idade:inteiro

inicio

   escreva("Em que anos estamos?")
   leia(ano)
   escreva("Em que ano você nasceu?")
   leia(nasc)
   idade<- ano - nasc
   escreval("Em",ano," você terá",idade," anos de idade!")
   se(idade>=21)entao
      escreval("E você já será maior de idade!")
   fimse

fimalgoritmo

