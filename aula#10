algoritmo "semnome"
var

   n,s:inteiro
   resp:caractere

inicio

      s<-0
      repita
      escreva("Digite o valor ==> ")
      leia(n)
      s <- s + n
      escreva("Você quer continuar?[S/N] ")
      leia(resp)
      ate(resp = "N")
      escreval("A soma é ",s)

fimalgoritmo

algoritmo "semnome"
var

   cont,n,res:inteiro

inicio

   cont <- 1
   escreval("Quer ver a tabuada de qual número: ")
   leia(n)
   
   repita
   res <- n * cont
      escreval(n,"x",cont,"= ", res)
      cont <- cont + 1
   ate(cont > 10)
fimalgoritmo

