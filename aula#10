algoritmo "semnome"
var

   c,n,f:inteiro

inicio

   escreva("Digite um número: ")
   leia(n)
   c<-n
   f<-1
   repita

      f<- f * c
      c<-c-1
   ate(c<1)
   escreva("O valor do fatorial de",n," é igual a",f)

fimalgoritmo

