algoritmo "semnome"
var

   cont,n,cDiv:inteiro

inicio

   cont<-1
   cDiv<- 0

   escreva("Digite um número: ")
   leia(n)

   repita
   
      se(n % cont = 0)entao
         cDiv<-cDiv + 1
      fimse
      cont<- cont + 1
      
   ate(cont>n)
   
   se(cDiv<=2)entao
      escreval("O número é primo!")
   senao
      escreval("Não é primo!")
   fimse

fimalgoritmo