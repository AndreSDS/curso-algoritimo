algoritmo "triangulos"
var

l1, l2, l3: real
eq,es, tri: logico

inicio

Escreva("Digitee o primeiro lado: ")
Leia(l1)
Escreva("Digitee o segundo lado: ")
Leia(l2)
Escreva("Digitee o terceiro lado: ")
Leia(l3)

eq <- (l1 = l2) e (l2=l3)
es <- (l1<>l2) e (l2<>l3) e (l1<>l3)
tri <- (l1<l2+l3) e (l2<l1+l3) e (l3<l2+l1)

Escreval("Ele pode formar um triângulo?:",tri)
Escreval("O triângulo é equilátero?:",eq)
Escreval("O triângulo é escaleno?:",es)

fimalgoritmo